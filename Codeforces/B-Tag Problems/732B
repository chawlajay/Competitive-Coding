class BCormenTheBestFriendOfAMan {
public:
	void solve(std::istream& in, std::ostream& out) {
	    long long int n , k , i , j , ans = 0;
	    in >> n >> k;
	    long long int a[n+1] , b[n+1];
	    for(i = 0 ; i < n ; i++) {
	        in >> a[i];
	        b[i] = a[i];
	    }
	    for(i = 1 ; i <n ; i++) {
	        if(a[i]+a[i-1] < k) {
	            a[i] += k - (a[i-1] + a[i]);
	        }
	        ans += abs(b[i] - a[i]);
	    }
	    out << ans << "\n";
	    for(i = 0 ; i < n ; i++) {
	        out << a[i] << " ";
	    }

	}
};



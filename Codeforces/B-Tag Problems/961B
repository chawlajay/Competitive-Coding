using namespace std;

class BLectureSleep {
public:
	void solve(std::istream& in, std::ostream& out) {
	    long long int n , k , i , j;
	    in >> n >> k;
	    long long int a[n+1] , t[n+1];
	    for(i = 1 ; i <= n ; i++) {
	        in >> a[i];
	    }
	    for(i = 1 ; i <= n ; i++) {
	        in >> t[i];
	    }
	    long long int preall[n+1] , pre[n+1];
	    preall[1] = a[1];
	    pre[1] = a[1]*t[1];
	    for(i = 2 ; i <= n ; i++) {
	        preall[i] = preall[i-1] + a[i];
	        pre[i] = pre[i-1] + a[i]*t[i];
	    }
	    long long int ans = preall[k] + pre[n] - pre[k];
	    for(i = 2 ; i <= n - k + 1 ; i++) {
	        ans = max(ans , pre[i-1] + preall[i+k-1] - preall[i-1] + pre[n] - pre[i+k-1]);
	    }
	    out << ans << "\n";
	}
};


int main() {
	BLectureSleep solver;
	std::ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	std::istream& in(std::cin);
	std::ostream& out(std::cout);
	solver.solve(in, out);

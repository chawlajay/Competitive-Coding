	    while(l != n+1 && r != m+1) {
	        if(abs(a[l] - b[r]) < 2) {
	            ans++;
	            l++;
	            r++;
	        }
	        else {
                if(a[l] < b[r]) {
                    l++;
                }
                else {
                    r++;
                }
	        }
	    }
	    out << ans << "\n";

	}

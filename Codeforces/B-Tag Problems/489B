	void solve(std::istream& in, std::ostream& out) {
	    long long int n , m , i , j , l = 1 , r = 1 ,  ans = 0;
	    in >> n;
	    long long int a[n+1];
	    for(i = 1 ; i <= n ; i++) {
	        in >> a[i];
	    }
	    in >> m;
	    long long int b[m+1];
	    for(i = 1 ; i <= m ; i++) {
	        in >> b[i];
	    }
	    sort(a + 1 , a + n + 1);

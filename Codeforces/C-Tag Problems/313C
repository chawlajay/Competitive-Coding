public:
	void solve(std::istream& in, std::ostream& out) {
	    long long int n , i , j , ans = 0;
	    in >> n;
	    long long int a[n+1];
	    for(i = 0 ; i < n ; i++) {
	        in >> a[i];
	    }
	    sort(a , a+n , greater<>());
	    long long int pre[n+1];
	    pre[0]=a[0];
	    for(i = 1 ; i < n ; i++) {
	        pre[i] = pre[i-1] + a[i];
	    }
	    for(i = 0 ; (int)pow(4 , i) <= n ; i++) {
	        ans += pre[(int)pow(4 , i) - 1];
	    }
        out << ans << "\n";
	}

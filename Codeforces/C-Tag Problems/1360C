#pragma comment(linker, "/stack:200000000")
#pragma GCC optimize("Ofast")
#pragma GCC target("sse,sse2,sse3,ssse3,sse4,popcnt,abm,mmx,avx,tune=native")

#include <bits/stdc++.h>

using namespace std;

class CSimilarPairs {
public:
	void solve(std::istream& in, std::ostream& out) {
	    int t;
	    in >> t;
	    while(t-- > 0) {
	        int n , i , even = 0 , odd = 0;
	        in >> n;
	        int a[n+1];
	        for(i = 0 ; i < n ; i++) {
	            in >> a[i];
	            if(a[i]%2 == 0) even++;
	            else odd++;
	        }
	        if(even%2 == 0 && odd%2 == 0) {
	            out << "YES\n";
	        }
	        else {
	            int flag = 0;
	            sort(a , a+n);
	            for(i = 0 ; i < n ; i++) {
	                if(abs(a[i] - a[i+1]) == 1) {
	                    flag = 1;
	                    break;
	                }
	            }
	            if(flag == 0) out << "NO\n";
	            else out << "YES\n";
	        }
	    }

	}
};


int main() {
	CSimilarPairs solver;
	std::ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	std::istream& in(std::cin);
	std::ostream& out(std::cout);
	solver.solve(in, out);
	return 0;
}

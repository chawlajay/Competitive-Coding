using namespace std;

class CPoweredAddition {
public:
	void solve(std::istream& in, std::ostream& out) {
	    int t;
	    in >> t;
	    while(t-- > 0) {
	        long long int n , i , ans = 0;
	        in >> n;
	        long long int a[n+1];
	        for(i = 0 ; i < n ; i++) {
	            in >> a[i];
	        }
	        for(i = 1 ; i < n ; i++) {
	            if(a[i] < a[i-1]) {
	                ans = max(ans , (long long int)log2(a[i-1] - a[i]) + 1);
	                a[i] = a[i-1];
	            }
	        }
	        out << ans << "\n" ;
	    }

	}
};


int main() {
	CPoweredAddition solver;
	std::ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	std::istream& in(std::cin);
	std::ostream& out(std::cout);
	solver.solve(in, out);
	return 0;
}

class ATheWayToHome {
public:
	void solve(std::istream& in, std::ostream& out) {
	    long long int n , d , i , j , c=0;
	    string s;
	    in >> n >> d >> s;
	    i = 0;
	    while(1) {
	        int flag = 0;
	        for(j = min(i + d , s.size() - (long long int)1) ; j > i ; j--) {
	            if(s[j] == '1') {
	                i = j;
	                c++;
	                flag = 1;
	                break;
	            }
	        }
	        if(i == s.size() - 1) {
	            out << c << "\n";
	            return;
	        }
	        if(flag == 0) {
	            out << -1 << "\n";
	            return;
	        }
	    }

	}
};



#pragma comment(linker, "/stack:200000000")
#pragma GCC optimize("Ofast")
#pragma GCC target("sse,sse2,sse3,ssse3,sse4,popcnt,abm,mmx,avx,tune=native")

#include <bits/stdc++.h>

using namespace std;

class AFlippingGame {
public:
	void solve(std::istream& in, std::ostream& out) {
	    long long int n , i , j , k , c = 0 , ans = 0;
	    in >> n;
	    long long int a[n+1] , b[n+1];
	    for(i = 0 ; i < n ; i++) {
	        in >> a[i];
	    }
	    for(i = 0 ; i < n ; i++) {
	        for(j = i ; j < n ; j++) {
	            for(k = 0 ; k < n ; k++) {
	                b[k] = a[k];
	            }
	            for(k = i ; k <= j ; k++) {
	                b[k] = 1 - b[k];
	            }
	            for(k = 0 ; k < n ; k++) {
	                if(b[k] == 1) {
	                    c++;
	                }
	            }
	            ans = max(ans , c);
	            c = 0;
	        }
	    }
	    out << ans << "\n";
	}
};


int main() {
	AFlippingGame solver;
	std::ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	std::istream& in(std::cin);
	std::ostream& out(std::cout);
	solver.solve(in, out);
	return 0;
}

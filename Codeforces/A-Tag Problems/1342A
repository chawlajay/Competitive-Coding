using namespace std;

class ARoadToZero {
public:
	void solve(std::istream& in, std::ostream& out) {
	    int t;
	    in >> t;
	    while(t-- > 0) {
	        long long int x , y , a ,b;
	        in >> x >> y >> a >> b;
	        long long int ans = abs(x - y)*a;
	        x= min(x , y);
	        ans += min(x*b , 2*x*a);
	        out << ans << "\n";
	    }

	}
};



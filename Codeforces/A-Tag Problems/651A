class AJoysticks {
public:
	void solve(std::istream& in, std::ostream& out) {
	    long long int a , b , ans = 0;
	    in >> a >> b;
	    while(1) {
            if(a <= 0 || b <= 0 || (a <= 1 && b <= 1)) {
                out << ans << "\n";
                return;
            }
	        if(a < b) {
	            a += 1;
	            b -= 2;
	            ans++;
	        }
	        else {
	            a -= 2;
	            b += 1;
	            ans++;
	        }
	    }

	}
};


int main() {
	AJoysticks solver;
	std::ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	std::istream& in(std::cin);
